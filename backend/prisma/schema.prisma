generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  plan      String   @default("Free")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  documents Document[]
  subscriptions Subscription[]
  lifeAudits LifeAudit[]
  incomes Income[]
  preference UserPreference?
  gmailToken GmailToken?
  emailLogs  EmailLog[]
  notifications Notification[]
  lastGmailIngestionAt DateTime?
}

model UserPreference {
  id                 String   @id @default(uuid())
  userId             String   @unique
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailNotifications Boolean  @default(true)
  aiDocumentAnalysis Boolean  @default(true)
  highCostThreshold  Float    @default(50.0)
  theme              String   @default("light")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Document {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  name      String
  category  String   @default("Uncategorized")
  type      String
  size      String
  path      String
  analysis  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt(sort: Desc)])
}

model Subscription {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  name          String
  price         Float
  currency      String   @default("USD")
  period        String
  category      String
  startDate     DateTime
  nextPayment   DateTime
  paymentMethod String?
  status        String   @default("Active")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LifeAudit {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  ratings   Json
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Income {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  name          String
  amount        Float
  currency      String   @default("USD")
  frequency     String   @default("Monthly") // e.g., Monthly, One-time
  category      String   @default("Salary")
  date          DateTime @default(now())
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}

model GmailToken {
  id           String   @id @default(uuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken  String
  refreshToken String
  expiryDate   DateTime
  email        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model EmailLog {
  id             String   @id @default(uuid())
  gmailId        String   @unique
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subject        String
  sender         String
  snippet        String?
  classification String?  // e.g. Subscription, Invoice, Scam
  extractedData  Json?    // e.g. { provider: 'Netflix', amount: 15.99 }
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   @default("info") // info, success, warning, danger
  title     String
  message   String
  metadata  Json?    // For linking to docId, subId, or gmailId
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt(sort: Desc)])
}
