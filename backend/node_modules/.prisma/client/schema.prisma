generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  documents     Document[]
  subscriptions Subscription[]
  lifeAudits    LifeAudit[]
}

model Document {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  name      String
  category  String   @default("Uncategorized")
  type      String
  size      String
  path      String
  analysis  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  name          String
  price         Float
  currency      String   @default("USD")
  period        String
  category      String
  startDate     DateTime
  nextPayment   DateTime
  paymentMethod String?
  status        String   @default("Active")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LifeAudit {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  ratings   Json
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
